            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol28" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol29" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol30"/>

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol31"/>
        <TextView
            android:id="@+id/key_symbol_number"
            style="@style/KeyBroadKeyStyle"
            android:text="123" />
        <TextView
            android:id="@+id/key_symbol_letter"
            style="@style/KeyBroadKeyStyle"
            android:text="ABC" />
        <LinearLayout
            android:id="@+id/key_symbol_delete"
            style="@style/KeyBroadKeyStyle"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_clear" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>