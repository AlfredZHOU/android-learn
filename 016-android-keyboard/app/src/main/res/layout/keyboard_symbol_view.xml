            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol15" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol16"/>

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol17" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol18" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol19" />
