            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol6" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol7" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol8" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol10" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol11"/>

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol12" />

        <TextView
            style="@style/KeyBroadKeyStyle"
            android:id="@+id/symbol13" />

